<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pocketNameInput"
        android:hint="pocket name"
        app:met_floatingLabel="normal"
        app:met_baseColor="@color/dialogInputColor"
        app:met_maxCharacters="50"
        app:met_primaryColor="?colorAccent"
        app:met_hideUnderline="false"
        android:textSize="25sp"
        android:gravity="center"
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pocketPasswordInput"
        android:hint="password (optional)"
        app:met_floatingLabel="normal"
        app:met_baseColor="@color/dialogInputColor"
        app:met_maxCharacters="50"
        app:met_primaryColor="?colorAccent"
        app:met_hideUnderline="false"
        android:textSize="25sp"
        android:gravity="center"
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"/>

</LinearLayout>